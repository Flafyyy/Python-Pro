import time
import random
import pyautogui
ix = 0
while (ix != 'выход'):
       t = random.randint(0,3)
       y = random.randint(0,3)
       ix = input('Что рассказать?')
       if (ix == 'сказку'):
           print('Жили-были...')
       if (ix == 'афоризм'):
           if (t == 1):
              print('На случай, если буду нужен, то я там же, где и был, когда был не нужен.')
           if (t == 2):
              print('Легко вставать, когда ты не ложился.')
           if (t == 3):
              print('Кем бы ты ни был, кем бы ты не стал, помни, где ты был и кем ты стал.')
       if (ix == 'анекдот'):
           if (y == 1):
              print('Наконец-то, свершилось! Я всю жизнь готовилась к этому дню, и вот он наступил. Вернулась домой, чтобы проверить, выключила ли я утюг, и оказалось, что НЕ ВЫКЛЮЧИЛА! Паранойя была обоснованной!')
           if (y == 2):
              print('Сегодня утром жена сказала что я ей порчу настроение. На вопрос - чем? Ответ - СВОЕЙ АУРОЙ.')
           if (y == 3):
              print('Новости - это анекдоты, ставшие теперь реальностью.')
       if (ix == 'блакнот'):
           pyautogui.hotkey('win','r')
        
           pyautogui.write('notepad')
           pyautogui.press('enter')
       if (ix == 'браузер'):
           pyautogui.hotkey('win','r')
        
        pyautogui.write('chrome')
        pyautogui.press('enter')
    
